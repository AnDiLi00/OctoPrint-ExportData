<h3>Export Data Settings</h3>

<form class="form-horizontal" onsubmit="return false;">

    <div class="control-group">
        <label class="control-label">{{ _('Folder') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.exportdata.folder"/>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">{{ _('Temperature') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.exportdata.temperature_file"/>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">{{ _('Printer Status') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.exportdata.status_file"/>
        </div>
    </div>
</form>
